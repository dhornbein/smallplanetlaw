---
import Button from "../ui/Button.astro";
import leaf from "../../assets/leaf.jpg";
import { Image } from "astro:assets";

const services = [
  {
    title: "Holistic Estate Planning",
    description:
      "Comprehensive, customized planning for individuals and families â€” because peace of mind should last a lifetime.",
  },
  {
    title: "Legacy & Family Trusts",
    description:
      "Preserve your wealth, values, and impact across generations with expert, caring guidance.",
  },
  {
    title: "Green Estate Planning",
    description:
      "Align your plan with your love for our world. Explore sustainable options for your estate and memorial wishes.",
  },
];
---

<section class="py-30 bg-neutral-cool shadow-xl">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <Image src={leaf} alt="Leaf" class="mx-auto max-h-80 w-auto" />
    <div class="text-center mb-12">
      <h2>What We Offer</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {
        services.map((service) => (
          <div class="bg-white/60 rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow duration-300">
            <h3 class="text-text-secondary text-2xl font-serif font-semibold text-deep-slate mb-4">
              {service.title}
            </h3>
            <p class="text-text-secondary leading-relaxed mb-6">
              {service.description}
            </p>
          </div>
        ))
      }
    </div>

    <div class="text-center">
      <Button href="/services" variant="primary" size="xl">
        Explore All Services
      </Button>
    </div>
  </div>
</section>
