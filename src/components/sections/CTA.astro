---
import Button from "../ui/Button.astro";
import CurvedEdge from "../ui/CurvedEdge.astro";
import portraitShadow from "../../assets/hero-shadow-wide.jpg";
import portraitShadowTall from "../../assets/hero-shadow-tall.jpg";
---

<section class="relative pb-40 bg-neutral-warm">
  <div
    class="shadow-lg mb-40 bg-var min-h-[40vh] bg-cover bg-center"
    style={`--bg-img: url(${portraitShadowTall.src}); --bg-img-md: url(${portraitShadow.src});`}
  >
  </div>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2
      class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-deep-slate mb-6"
    >
      Let's Start Planning What Matters Most
    </h2>
    <p class="text-xl text-text-secondary mb-8 leading-relaxed">
      Schedule a warm, no-pressure consultation to discuss your goals and
      creating a plan that feels right for you â€” and right for the Earth.
    </p>
    <Button href="./contact" size="lg" variant="accent">Start Your Plan</Button>
  </div>
  <CurvedEdge fillColor="fill-neutral-warm" position="bottom" />
</section>
