---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-12 h-12',
  lg: 'w-16 h-16'
};
---

<div class={`relative ${sizeClasses[size]} ${className}`}>
  <!-- The pale blue dot (small planet) -->
  <div class="w-full h-full rounded-full bg-gradient-to-br from-blue-300 via-blue-400 to-blue-500 shadow-lg">
    <!-- Atmospheric glow -->
    <div class="w-full h-full rounded-full bg-gradient-to-tr from-white/30 to-transparent opacity-50"></div>
  </div>
  <!-- Optional subtle shadow/space effect -->
  <div class="absolute inset-0 rounded-full shadow-[0_0_20px_rgba(59,130,246,0.3)]"></div>
</div>
