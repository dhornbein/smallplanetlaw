              <p class="text-text-secondary">
                {brandColors.primary.description}
              </p>
            </div>
            <div class="flex flex-wrap gap-2 items-start">
              {/* Main color - fixed width, stays square */}
              <div class="flex-none w-32 sm:w-40">
                <div
                  class="w-full aspect-square rounded-lg shadow-md relative group overflow-hidden cursor-pointer color-swatch"
                  style={`background-color: ${brandColors.primary.base.hex}`}
                  data-color={brandColors.primary.base.hex}
                  title="Click to copy"
                >
                  <div
                    class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-200"
                  >
                  </div>
                </div>
                <div class="mt-2 text-center">
                  <div class="text-sm font-medium text-text-primary">
                    {brandColors.primary.name}
                  </div>
                  <button
                    class="text-xs text-text-secondary font-mono hover:text-primary transition-colors duration-200 cursor-pointer copy-hex"
                    data-color={brandColors.primary.base.hex}
                    title="Click to copy"
                  >
                    {brandColors.primary.base.hex}
                  </button>
                </div>
              </div>

              {/* Shades - dynamic width, squish on mobile */}
