<script>
  // Copy hex color to clipboard functionality
  function copyToClipboard(text: string): Promise<void> {
    return navigator.clipboard.writeText(text);
  }

  function showCopyFeedback(element: HTMLElement) {
    const originalText = element.textContent;
    element.textContent = "Copied!";
    element.classList.add("text-primary");

    setTimeout(() => {
      element.textContent = originalText;
      element.classList.remove("text-primary");
    }, 1500);
  }

  // Handle clicks on color swatches
  document.querySelectorAll(".color-swatch").forEach((swatch) => {
    swatch.addEventListener("click", async (e) => {
      const target = e.currentTarget as HTMLElement;
      const color = target.getAttribute("data-color");

      if (color) {
        try {
          await copyToClipboard(color);

          // Find the hex text element within this color block
          const hexButton = target
            .closest(".flex-1, .flex-none")
            ?.querySelector(".copy-hex") as HTMLElement;
          if (hexButton) {
            showCopyFeedback(hexButton);
          }
        } catch (err) {
          console.error("Failed to copy:", err);
        }
      }
    });
  });

  // Handle clicks on hex code buttons
  document.querySelectorAll(".copy-hex").forEach((button) => {
    button.addEventListener("click", async (e) => {
      e.stopPropagation(); // Prevent triggering the swatch click
      const target = e.currentTarget as HTMLElement;
      const color = target.getAttribute("data-color");

      if (color) {
        try {
          await copyToClipboard(color);
          showCopyFeedback(target);
        } catch (err) {
          console.error("Failed to copy:", err);
        }
      }
    });
  });

  // Logo download functionality
  // Handle format selection changes to enable/disable size select
  document.querySelectorAll(".format-select").forEach((select) => {
    select.addEventListener("change", (e) => {
      const formatSelect = e.currentTarget as HTMLSelectElement;
      const assetId = formatSelect.getAttribute("data-asset-id");
      const sizeSelect = document.querySelector(
        `#size-${assetId}`
      ) as HTMLSelectElement;

      if (formatSelect.value === "svg") {
        sizeSelect.disabled = true;
        sizeSelect.classList.add("opacity-50", "cursor-not-allowed");
      } else {
        sizeSelect.disabled = false;
        sizeSelect.classList.remove("opacity-50", "cursor-not-allowed");
      }
    });
  });

  // Handle download button clicks
  document.querySelectorAll(".download-asset-btn").forEach((button) => {
    button.addEventListener("click", async (e) => {
      const btn = e.currentTarget as HTMLButtonElement;
      const assetId = btn.getAttribute("data-asset-id");

      if (!assetId) return;

      const formatSelect = document.querySelector(
        `#format-${assetId}`
      ) as HTMLSelectElement;
      const sizeSelect = document.querySelector(
        `#size-${assetId}`
      ) as HTMLSelectElement;

      const format = formatSelect.value;
      const size = parseInt(sizeSelect.value);

      const svgContainer = document.querySelector(
        `[data-svg-container="${assetId}"]`
      );
      const imgElement = svgContainer?.querySelector("img") as HTMLImageElement;

      if (!imgElement) {
        console.error("Image element not found");
        return;
      }

      // Disable button during download
      btn.disabled = true;
      const originalText = btn.innerHTML;
      btn.innerHTML = `
        <svg class="w-5 h-5 mr-2 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Downloading...
      `;

      try {
        if (format === "svg") {
          await downloadSVG(imgElement, assetId);
        } else {
          await downloadRaster(imgElement, assetId, format, size);
        }
      } catch (err) {
        console.error("Download failed:", err);
        alert("Download failed. Please try again.");
      } finally {
        btn.disabled = false;
        btn.innerHTML = originalText;
      }
    });
  });

  async function downloadSVG(imgElement: HTMLImageElement, assetId: string) {
    try {
      const response = await fetch(imgElement.src);
      const svgText = await response.text();
      const blob = new Blob([svgText], {
        type: "image/svg+xml;charset=utf-8",
      });
      const url = URL.createObjectURL(blob);

      const link = document.createElement("a");
      link.href = url;
      link.download = `small-planet-law-${assetId}.svg`;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      URL.revokeObjectURL(url);
    } catch (err) {
      console.error("SVG download failed:", err);
      throw err;
    }
  }

  async function downloadRaster(
    imgElement: HTMLImageElement,
    assetId: string,
    format: string,
    size: number
  ) {
    return new Promise<void>(async (resolve, reject) => {
      try {
        // Fetch the SVG content
        const response = await fetch(imgElement.src);
        const svgText = await response.text();

        // Create blob URL from SVG text
        const svgBlob = new Blob([svgText], {
          type: "image/svg+xml;charset=utf-8",
        });
        const url = URL.createObjectURL(svgBlob);

        // Load SVG into image to get dimensions
        const img = new Image();

        img.onload = () => {
          // Calculate height based on aspect ratio
          const aspectRatio = img.height / img.width;
          const width = size;
          const height = Math.round(size * aspectRatio);

          // Create canvas with calculated dimensions
          const canvas = document.createElement("canvas");
          const ctx = canvas.getContext("2d");

          if (!ctx) {
            URL.revokeObjectURL(url);
            reject(new Error("Could not get canvas context"));
            return;
          }

          canvas.width = width;
          canvas.height = height;

          // For JPG, fill with white background
          if (format === "jpg") {
            ctx.fillStyle = "#ffffff";
            ctx.fillRect(0, 0, width, height);
          }

          // Draw image at calculated size
          ctx.drawImage(img, 0, 0, width, height);
          URL.revokeObjectURL(url);

          canvas.toBlob(
            (blob) => {
              if (!blob) {
                reject(new Error("Could not create blob"));
                return;
              }

              const downloadUrl = URL.createObjectURL(blob);
              const link = document.createElement("a");
              link.href = downloadUrl;
              link.download = `small-planet-law-${assetId}-${width}px.${format}`;
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
              URL.revokeObjectURL(downloadUrl);
              resolve();
            },
            `image/${format === "jpg" ? "jpeg" : format}`
          );
        };

        img.onerror = () => {
          URL.revokeObjectURL(url);
          reject(new Error("Failed to load SVG"));
        };

        img.src = url;
      } catch (err) {
        reject(err);
      }
    });
  }
