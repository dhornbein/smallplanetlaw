                    <div class="flex-1 min-w-[60px] max-w-20">
                      <div
                        class="w-full aspect-square rounded-lg shadow-sm relative group overflow-hidden cursor-pointer color-swatch"
                        style={`background-color: ${shade.hex}`}
                        data-color={shade.hex}
                        title="Click to copy"
                      >
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-200" />
