---
import { base } from "../utils/navigation";

// Immediately redirect to Clio Grow booking system in a new window
const bookingUrl =
  "https://smallplanetlaw.cliogrow.com/book/173de2aea8b3decac6684b3d007f2d15";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting to Booking - Small Planet Law</title>
    <meta
      http-equiv="refresh"
      content={`0;url=${bookingUrl}`}
    />
    <script define:vars={{ bookingUrl, base }}>
      // Open in new window and redirect current page back to home
      window.open(bookingUrl, "_blank");
      // Use window.history to go back or redirect to home
      if (window.history.length > 1) {
        window.history.back();
      } else {
        window.location.href = base || "/";
      }
    </script>
  </head>
  <body>
    <div style="font-family: sans-serif; text-align: center; padding: 50px;">
      <h1>Redirecting to Booking System...</h1>
      <p>Opening booking page in a new window.</p>
      <p>
        If nothing happens,
        <a
          href={bookingUrl}
          target="_blank"
          rel="noopener noreferrer"
        >
          click here to book your consultation
        </a>
      </p>
    </div>
  </body>
</html>
